<%= stylesheet_link_tag "quickmenu/main" %>

<div class="row">
<% @products.each do |p| %>
	<div class="col-sm-4 col-xs-6 card-padding">

		<!-- Feature -->
			<div class="quickmenu-card">
				<%= image_tag(p.image_url, class: "card-image") %>
				<header>
					<h3><strong><%= p.name %></strong></h3>
				</header>
				<p class="card-description"><%= p.description %></p>
				<p class="card-price"><%= p.price %> 원</p>
				<a href="#" class="btn btn-default btn-lg btn-block">주문하기</a>
				</div>					
	</div>
<% end %>
</div>

