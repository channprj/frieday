<%= stylesheet_link_tag "quickmenu/main" %>

<div class="quickmenu-row">
	<a href="random/spinner" class="btn btn-default btn-lg btn-block random">치킨 복불복</a>
</div>

<div class="quickmenu-row">
	<h2 class="title">주간랭킹</h2>
</div>
<div class="quickmenu-row">
<% @chickens.each do |ck| %>
	<div class="col-sm-4 col-xs-6 card-padding">

		<!-- Feature -->
			<div class="quickmenu-card">
				<%= image_tag(ck.image_url, class: "card-image") %>
				<header>
					<h3><strong><%= ck.name %></strong></h3>
				</header>
				<p class="card-description"><%= ck.description %></p>
				<p class="card-price"><%= ck.price %> 원</p>
				<a href="#" class="btn btn-default btn-lg btn-block">주문하기</a>
				</div>					
	</div>
<% end %>
</div>

